              <h4>
                <%=product.product_name %>
              </h4>
              <div class="price">
                <a href="../products/cart"> <i class="fa-solid fa-cart-shopping" id="cart"></a></i>
              <i class="fa-solid fa-dollar-sign"></i> <%= product.price%>
            </div>
              <%= product.description%> 
              <form  class="delete" action="/products/edit/<%=product.id%>">
              <button type="submit"> Editar

              </button>
              </form> 
              
            </div>
