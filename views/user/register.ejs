<!DOCTYPE html>
<html lang="es">

<head>
  <%- include("../partials/head")%> 
  <link rel="stylesheet" href="css/login.css">
  <link rel="stylesheet" href="css/register.css">
 
</head>

<body>
  <%- include("../partials/header")%> 
  <main class="main">
    <form class="form">
      <h2 class="form-title">Sign up</h2>
      <div class="form-field">
        <label class="form-field__label" for="Username"><i class="fa-solid fa-user form-field__icon"></i></label>
        <input class="form-field__input" type="text" placeholder="Full Name" id="Username">
      </div>
      <div class="form-field">
        <label class="form-field__label" for="email"><i class="fa-regular fa-envelope form-field__icon"></i></label>
        <input class="form-field__input" type="email" placeholder="E-mail" id="email">
      </div>
      <div class="form-field">
        <label class="form-field__label" for="password"><i class="fa-solid fa-lock form-field__icon"></i></label>
        <input class="form-field__input" type="password" placeholder="Password" id="password">
      </div>
      <div class="form-field">
        <label class="form-field__label" for="confirm_password"><i
            class="fa-solid fa-lock form-field__icon"></i></label>
        <input class="form-field__input" type="password" placeholder="Confirm Password" id="confirm_password">
      </div>
      <div class="form-field">
        <br>
        <label for="image">Subir imagen</label>
        <br>
        <input type="file" name="image" id="image" single>
    </div>
      <input type="submit" class="form-button" value="Create Account">
      <!-- <button class="form-button">Create Account</button> -->


    </form>
    <div class="text">
      <p>Welcome to the ------ community!</p>
    </div>

    <%- include("../partials/footer")%> 
  </main>
  
</body>

</html>